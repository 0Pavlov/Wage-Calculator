                    # sizing
                    color: root.text_color
                    on_press: app.update_value('day_shifts', 1)
        # Row 3 end

        # Row 4 start
        # (label) and ((button+label+button)layout) layout
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            # label
