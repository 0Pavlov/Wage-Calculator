# main layout that divides the screen vertically
# between tweak part and the output part
<WageCalculatorLayout>:
    orientation: 'vertical'
    padding: 5
    spacing: 5
    # Background color of the main layout
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    # tweak part
    GridLayout:
        cols: 1
        spacing: 5

        # Row 1 start
        # label and (slider+label) layout

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            # label
            Label:
                text: "Дневная ставка:"
                # sizing
                font_size: (self.width + self.height) / 20
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                shorten: True
                # sizing
                color: root.text_color
                valign: 'middle'

            # (slider+label) layout
            BoxLayout:
                orientation: 'horizontal'

                # slider
                Slider:
                    id: day_hour_slider
                    size: self.size
                    min: 250
                    max: 350
                    step: 5
                    value: 275
                    on_value: app.update_day_hour(self.value)
                    # Slider color properties
                    value_track: root.slider_track_color
                    value_track_width: '5dp'
                    #cursor_image: ''  # Remove default cursor
                    cursor_size: '20dp', '20dp'
                    canvas.after:
                        Color:
                            rgba: root.slider_cursor_color
                        Ellipse:
                            pos: (self.value_pos[0] - self.cursor_size[0] / 2, self.center_y - self.cursor_size[1] / 2)
                            size: self.cursor_size

                #label
                Label:
                    id: day_hour_label
                    text: str(int(day_hour_slider.value))
                    # sizing
                    size_hint_x: 1/2
                    font_size: (self.width + self.height) / 10
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    shorten: True
                    # sizing
                    color: root.text_color
                    valign: 'middle'
        # Row 1 end

        # Row 2 start
        # (label) and ((button+label+button)layout) layout

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            # label
            Label:
                text: 'Смены (ночь):'
                # sizing
                font_size: (self.width + self.height) / 20
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                shorten: True
                # sizing
                color: root.text_color

            # (button+label+button) layout
            BoxLayout:
                id: night_shifts_layout
                orientation: 'horizontal'
                Button:
                    background_color: root.button_color if self.state == 'normal' else root.button_active_color
                    background_normal: ""
                    background_down: ""
                    text: "-"
                    # sizing
                    font_size: (self.width + self.height) / 10
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    # sizing
                    color: root.text_color
                    on_press: app.update_value('night_shifts', -1)
                Label:
                    id: night_shifts_label
                    text: "0"
                    # sizing
                    font_size: (self.width + self.height) / 10
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    shorten: True
                    # sizing
                    color: root.text_color
                Button:
                    background_color: root.button_color if self.state == 'normal' else root.button_active_color
                    background_normal: ""
                    background_down: ""
                    text: "+"
                    # sizing
                    font_size: (self.width + self.height) / 10
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    # sizing
                    color: root.text_color
                    on_press: app.update_value('night_shifts', 1)
        # Row 2 end

        # Row 3 start
        # (label) and ((button+label+button)layout) layout
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5

            # label
            Label:
                text: 'Смены (день):'
